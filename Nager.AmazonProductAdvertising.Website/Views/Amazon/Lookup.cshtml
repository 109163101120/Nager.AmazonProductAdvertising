@model Nager.AmazonProductAdvertising.Model.AmazonItemResponse
@{
    ViewBag.Title = "Lookup";
}

<h2>Lookup</h2>

<div class="panel panel-default">
    <div class="panel-body">
        <form class="form-inline">
            <div class="form-group">
                <label for="search">Lookup</label>
                <input type="text" class="form-control" id="lookup" name="articleNumber" placeholder="articleNumber">
            </div>
            <button type="submit" class="btn btn-primary">Lookup</button>
        </form>
    </div>
</div>

<div class="row">
    @if (Model != null)
    {
        foreach (var item in Model.Items.Item)
        {
            <div class="col-xs-12 col-md-6">
                <div class="row">
                    <div class="col-xs-12 col-md-3">
                        @if (item.MediumImage != null)
                        {
                            <img src="@item.MediumImage.URL" alt="@item.ItemAttributes.Title" class="img-thumbnail" />
                        }
                    </div>
                    <div class="col-xs-12 col-md-9">
                        <h4>@item.ItemAttributes.Title <span class="label label-default">@(item.OfferSummary?.LowestNewPrice?.FormattedPrice)</span></h4>
                        @if (item.ItemAttributes.Feature != null)
                        {
                            <ul>
                                @foreach (var description in item.ItemAttributes.Feature)
                                {
                                    <li>@description</li>
                                }
                            </ul>
                        }
                        <a class="btn btn-primary" href="@item.DetailPageURL" role="button">Bei Amazon kaufen</a>
                    </div>
                </div>
            </div>
        }
    }
</div>